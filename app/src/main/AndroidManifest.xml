<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="se.chalmers.cse.dit341.group07">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">


        <activity android:name="se.chalmers.cse.dit341.group07.MainActivity"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="se.chalmers.cse.dit341.group07.CreateProduct"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/create_product_headline"
            android:launchMode="singleTask"
            android:parentActivityName="se.chalmers.cse.dit341.group07.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.cse.dit341.group07.MainActivity" />
        </activity>

        <activity android:name="se.chalmers.cse.dit341.group07.ProductScreen"
            android:label="@string/product_headline"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName="se.chalmers.cse.dit341.group07.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.cse.dit341.group07.MainActivity" />
        </activity>

        <activity android:name="se.chalmers.cse.dit341.group07.UpdateProduct"
            android:label="@string/product_headline"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName="se.chalmers.cse.dit341.group07.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.cse.dit341.group07.MainActivity" />
        </activity>

        <activity android:name="se.chalmers.cse.dit341.group07.ReviewsScreen"
            android:label="Reviews"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName="se.chalmers.cse.dit341.group07.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.cse.dit341.group07.MainActivity" />
        </activity>
        <activity android:name="se.chalmers.cse.dit341.group07.SellerScreen"
            android:label="Seller"
            android:configChanges="orientation|keyboardHidden"
            android:parentActivityName="se.chalmers.cse.dit341.group07.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.chalmers.cse.dit341.group07.MainActivity" />
        </activity>

    </application>

</manifest>
